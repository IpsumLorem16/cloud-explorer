{
	
	"manifest_version": 2,
	"name": "cloud explorer",
	"version": "1.0",
	
	"description": "Add styling and buttons to make browsing cloud storage easier",
	
  "permissions": [
    "activeTab"
  ],
	
	"background": {
		"scripts": ["background_scripts/background.js"]
	},
	
	"browser_action": {
		"default_icon": {
			"16": "icons/cloud-browser-icon-16.png",
			"32": "icons/cloud-browser-icon-32.png"
		}
	}
	
}